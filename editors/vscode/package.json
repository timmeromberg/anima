{
  "name": "anima-vscode",
  "displayName": "Anima Language",
  "description": "Language support for the Anima AI-first programming language",
  "version": "0.1.0",
  "publisher": "anima-lang",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:anima"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "anima",
        "aliases": [
          "Anima",
          "anima"
        ],
        "extensions": [
          ".anima"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Anima",
      "properties": {
        "anima.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Anima LSP server executable. If empty, uses the bundled server."
        },
        "anima.lsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace LSP communication for debugging."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "npm run build",
    "package": "npx @vscode/vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
